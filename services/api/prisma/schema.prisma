generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  LISTENER
  ARTIST
  ADMIN
}

enum ProfileKind {
  LISTENER
  ARTIST
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  role      Role     @default(LISTENER)
  createdAt DateTime @default(now())

  // magic link fields used by auth.service
  magicToken        String?   @unique
  magicTokenExpires DateTime?

  profile Profile?
}

model Profile {
  id          String       @id @default(cuid())
  userId      String       @unique
  kind        ProfileKind  // was String
  displayName String
  genres      String[]     // remove @db.Text on arrays
  avatarUrl   String?      @db.Text   // keep @db.Text so long Cloudinary URLs fit
  bio         String?      @db.Text
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}
